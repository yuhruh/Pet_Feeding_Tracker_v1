<div class="container">
  <%= form_with(model: user) do |form| %>
    <div class="d-flex justify-content-center">
      <%= render 'shared/errors', obj: @user %>
    </div>

    <div class="col-12">
      <div class="row mb-3 justify-content-center">
      <%= form.label :username, class: "col-sm-3 col-form-label", style: "color: #515a5a; font-weight: bold" %>
      <div class="col-sm-3">
        <%= form.text_field :username, class: "form-control", placeholder: "Enter a username" %>
       </div> 
    </div>

    <div class="col-12">
      <div class="row mb-3 justify-content-center">
      <%= form.label :email, class: "col-sm-3 col-form-label", style: "color: #515a5a; font-weight: bold" %>
      <div class="col-sm-3">
        <%= form.email_field :email, class: "form-control", placeholder: "Enter your email address"  %>
      </div>
    </div>

    <div class="col-12">
      <div class="row mb-3 justify-content-center">
      <%= form.label :password, class: "col-sm-3 col-form-label", style: "color: #515a5a; font-weight: bold" %>
      <div class="col-sm-3">
        <%= form.password_field :password, class: "form-control", placeholder: "Create password" %>
        <div id="passwordHelpBlock" class="form-text">Password should contain at least one upper case, one lower case, one digit and one special character</div>
      </div>
    </div>

    <div class="col-12">
      <div class="row mb-3 justify-content-center">
      <%= form.label :password_confirmation, class: "col-sm-3 col-form-label", style: "color: #515a5a; font-weight: bold" %>
      <div class="col-sm-3">
        <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Confirm password"  %>
      </div>
    </div>

    <div class="d-flex justify-content-center">
      <%= form.submit(@user.new_record? ? 'Sign Up' : 'Update account', class: "btn", style: "color: #515a5a; font-weight: bold; background-color: #d5dbdb") %>
    </div>
  <% end %>
</div>
